<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_wash_wall"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DatosProfesor" >

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:text="Nombre"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtInscribirse"
        android:layout_alignParentRight="true"
        android:text="Nivel"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtInscribirse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtNombre"
        android:layout_marginTop="16dp"
        android:text="Titulación"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtOfrezco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtInscribirse"
        android:layout_below="@+id/txtInscribirse"
        android:layout_marginTop="91dp"
        android:text="Contacto"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtOfrezco"
        android:layout_alignBottom="@+id/txtOfrezco"
        android:layout_alignParentRight="true"
        android:text="Precio"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtContactoIntercambio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtOfrezco"
        android:layout_marginTop="80dp"
        android:text="Comentarios"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtTitulacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtInscribirse"
        android:layout_alignRight="@+id/txtNombre"
        android:layout_below="@+id/txtInscribirse"
        android:layout_marginTop="14dp"
        android:text="Titulación"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtTitulacion"
        android:layout_alignLeft="@+id/textView5"
        android:text="Nivel"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtOfrezco"
        android:layout_below="@+id/txtOfrezco"
        android:layout_marginTop="14dp"
        android:text="Contacto"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtContacto"
        android:layout_alignParentRight="true"
        android:text="Precio"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtComentarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtContactoIntercambio"
        android:layout_below="@+id/txtContactoIntercambio"
        android:layout_marginTop="16dp"
        android:text="Comentarios"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtTlf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtContacto"
        android:layout_below="@+id/txtContacto"
        android:layout_marginTop="14dp"
        android:text="Contacto"
        android:textColor="#FFFFFF" />

</RelativeLayout>