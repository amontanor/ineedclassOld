<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grey_wash_wall"
    android:orientation="vertical"
    android:weightSum="16"
    tools:context=".MainActivity" >
    
    <ImageView
    	android:id="@+id/imageView1"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:scaleType="fitCenter"
    	android:layout_weight="2"
    	android:src="@drawable/logo2" />
    
    <ImageView
    	android:id="@+id/vacio"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
		android:layout_weight="3.5"
		android:src="@drawable/vacio"
    	android:background="@android:color/transparent" />
    
    <ImageButton
        android:id="@+id/btnBusqueda"
		android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/icono1"
        android:background="@android:color/transparent"
         />

	<ImageButton
	    android:id="@+id/btnRegistro"
		android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
	    android:layout_gravity="center_horizontal"
	    android:scaleType="fitCenter"
	    android:src="@drawable/icono2"
	    android:background="@android:color/transparent"
	     />
	<ImageView
    	android:id="@+id/vacio"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:src="@drawable/vacio"
		android:layout_weight="2"
    	android:background="@android:color/transparent" />

	<ImageButton
	    android:id="@+id/btnCompartir"
		android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
	    android:layout_gravity="center_horizontal"
	    android:scaleType="fitCenter"
	    android:src="@drawable/compartir"
	    android:background="@android:color/transparent"
	     />
	
	<ImageView
    	android:id="@+id/vacio"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
		android:layout_weight="2"
		android:src="@drawable/vacio"
    	android:background="@android:color/transparent" />
	
	<ImageView
    	android:id="@+id/vacio"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
		android:layout_weight="3"
		android:src="@drawable/vacio"
    	android:background="@android:color/transparent" />
	<ImageView
    	android:id="@+id/vacio"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
		android:layout_weight="0.5"
		android:background="@android:color/black"
		android:src="@drawable/pie"/>

</LinearLayout>